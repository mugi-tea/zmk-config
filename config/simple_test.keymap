#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Default Layer";

            // ------------------------------------------------------------------------------------------------------------
            // |  B  |  D  |
            // |  F  |  H  |
            // |  A  |  C  |
            // |  E  |  G  |

            bindings = <
&kp C  &kp A
&kp G  &kp E
&kp D  &kp B
&mo 1  &kp F
            >;
        };

        lower_layer {
            display-name = "Lower Layer";

            // ------------------------------------------------------------------------------------------------------------
            // |  1  |  2  |
            // |  3  |  4  |
            // |  5  |  6  |
            // |  7  |  8  |

            bindings = <
&kp NUMBER_3  &bt BT_SEL 0
&kp N7        &kp N5
&kp NUMBER_4  &bt BT_SEL 1
&trans        &kp NUMBER_6
            >;
        };

        raise_layer {
            display-name = "Raise Layer";

            // ------------------------------------------------------------------------------------------------------------
            // |  F1  |  F2  |
            // |  F3  |  F4  |
            // |  F5  |  F6  |
            // |  F7  |  F8  |

            bindings = <
&kp F1  &kp F2
&kp F3  &kp F4
&kp F5  &kp F6
&kp F7  &kp F8
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
